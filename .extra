# PATH additions
for another_bin in \
    $(brew --prefix coreutils)/libexec/gnubin \
    $HOME/bin
do
    [[ -e $another_bin ]] && export PATH=$another_bin:$PATH
done
export PATH=/usr/local/bin:/usr/local/sbin:$PATH

